{
  "compilerOptions": {
    "types": ["@testing-library/jest-dom", "node", "jest"],
    "module": "ES6",
    "moduleResolution": "Node",
    "target": "es2020",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": ["es2020", "dom"],
    "allowImportingTsExtensions": true,
    "paths": {
      "@src/*": ["src/*"],
      "@public/*": ["public/*"]
    }
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json"},
    { "path": "./tsconfig.node.json"}
  ],
  "include": ["src", "vite-env.d.ts"],
  "types": ["jest"],
  "esModuleInterop": true
}
